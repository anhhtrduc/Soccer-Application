<div class='container-fluid'>
    <div class='row'>
        <table class='table table-striped'>
            <thead>
                <tr>
                    <th scope='col'>#</th>
                    <th scope='col'>Team</th>
                    <th scope='col'></th>
                    <th scope='col'>Score</th>
                </tr>
            </thead>
            <tbody>
                {{#each this.users as |U|}}
                    <tr>
                        <th scope='row'>#</th>
                        <td><img
                                src='../../{{U.avatar}}'
                                alt=''
                                style='width:40px'
                            />{{U.fullname}}</td>
                        <td></td>
                        <td>{{U.score}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>