<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Home</title>
        <link
            href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
            rel='stylesheet'
        />
        <link rel='stylesheet' href='profile.css' />
        <link
            rel='stylesheet'
            href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css'
        />

    </head>
    <body>
        <div class='container'>
            <div class='row'>
                <div class='col-sm-3'></div>

                <!----->
                <div class='col-sm-6 bg-success text-white'>
                    <!--Tạo bảng thông tin tổng quát với nền xanh, chữ trắng -->
                    <div class='row'>
                        <div class='col-sm-6'>
                            <b>
                                <p>{{league.name}}</p>
                            </b>
                            <!-- Ngày thi đấu -->
                        </div>

                        <div class='col-sm-6 text-end'>
                            <p><b>Kết thúc</b></p>
                            <!--Trạng thái trận đấu đang diễn ra hay đã kết thúc -->
                        </div>
                    </div>

                    <div class='row'>
                        <div class='col-sm-4 text-center'>
                            <!-- Ảnh đội 1 -->
                            <img
                                src='../{{user1.avatar}}'
                                alt=''
                                width='125'
                                height='125'
                            />
                        </div>

                        <div class='col-sm-4 align-self-center text-center'>
                            <!-- kết quả -->
                            <h1
                            >{{newsearchResult.team1.goal}}-{{newsearchResult.team2.goal}}</h1>
                        </div>
                        <div class='col-sm-4 text-center'>
                            <!-- Ảnh đội 1 -->
                            <img
                                src='../{{user2.avatar}}'
                                alt=''
                                width='125'
                                height='125'
                            />
                        </div>

                    </div>

                    <div class='row mb-3'></div>
                    <!-- tạo khoảng trống bên dưới logo cho đẹp -->
                    <div class='row border-top border-dark mt-2'>
                        <!--tạo khung xanh, chữ trắng và bắt đầu từ top 2 đơn vị-->
                        <div class='col-sm-4 text-center mt-2'>
                            {{#each newsearchResult.team1.nameofgoal as |N|}}
                            <p>{{N}}</p>
                            {{/each}}
                        </div>

                        <div class='col-sm-4 text-center mt-2'>
                            <img
                                src='https://ssl.gstatic.com/onebox/sports/soccer_timeline/soccer-ball-retina.png'
                                alt=''
                                width='20'
                                height='20'
                            />
                        </div>
                        <div class='col-sm-4 text-center mt-2'>
                            {{#each newsearchResult.team2.nameofgoal as |N|}}
                            <p>{{N}}</p>
                            {{/each}}
                        </div>
                    </div>
                    <!-- tạo khoảng trống bên dưới logo cho đẹp -->

                    <div class='row  border-dark mt-2'>
                        <!--tạo khung xanh, chữ trắng và bắt đầu từ top 2 đơn vị-->
                        <div class='col-sm-4 text-center mt-2'>
                            {{#each newsearchResult.team1.nameofrcard as |N|}}
                            <p>{{N}}</p>
                            {{/each}}
                        </div>
                        {{#ifStr newsearchResult.team1.redcard 1}}
                        <div class='col-sm-4 text-center mt-2'>
                            <img
                                src='https://ssl.gstatic.com/onebox/sports/soccer_timeline/red-card-right.svg'
                                alt=''
                                width='20'
                                height='20'
                            />
                        </div>
                        {{/ifStr}}
                        <div class='col-sm-4 text-center mt-2'>
                            {{#each newsearchResult.team2.nameofrcard as |N|}}
                            <p>{{N}}</p>
                            {{/each}}
                        </div>
                    </div>

                </div>

                <!--video diễn biến chính-->
                <div class='col-sm-3 align-self-center text-center'>
                    <iframe
                        width='300'
                        height='200'
                        src='{{newsearchResult.video}}'
                        title='YouTube video player'
                        frameborder='0'
                        allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture'
                        allowfullscreen
                    ></iframe>
                </div>
            </div>

            <div class='row mt-2'>
                <div class='col-sm-3'></div>

                <div class='col-sm-6 rounded-3 border border-3 border-success'>
                    <div class='table-responsive'>
                        <table
                            class='table table-borderless align-self-center text-center'
                        >
                            <thead>
                                <tr>
                                    <th scope='col' style='width: 33.3%'><img
                                            src='../{{user1.avatar}}'
                                            alt=''
                                            width='40'
                                            height='40'
                                        /></th>
                                    <th scope='col' style='width: 33.4%'>TEAM
                                        STATS</th>
                                    <th scope='col' style='width: 33.3%'><img
                                            src='../{{user2.avatar}}'
                                            alt=''
                                            width='40'
                                            height='40'
                                        /></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class='row-sm-4'>
                                    <th scope='row'>{{newsearchResult.team1.attemp}}</th>
                                    <td>Số lần sút</td>
                                    <th>{{newsearchResult.team2.attemp}}</th>
                                </tr>
                                <tr class='row-sm-4'>
                                    <th scope='row'>{{newsearchResult.team1.offside}}</th>
                                    <td>Việt vị</td>
                                    <th>{{newsearchResult.team2.attemp}}</th>
                                </tr>
                                <tr class='row-sm-4'>
                                    <th scope='row'>{{newsearchResult.team1.corner}}</th>
                                    <td>Số lần phạt góc</td>
                                    <th>{{newsearchResult.team2.corner}}</th>
                                </tr>
                                <tr>
                                    <th scope='row'>{{newsearchResult.team1.yellowcard}}</th>
                                    <td>Thẻ vàng</td>
                                    <th>{{newsearchResult.team2.yellowcard}}</th>
                                </tr>
                                <tr>
                                    <th scope='row'>{{newsearchResult.team1.redcard}}</th>
                                    <td>Thẻ đỏ</td>
                                    <th>{{newsearchResult.team2.redcard}}</th>
                                </tr>
                                <tr>
                                    <th scope='row'>{{newsearchResult.team1.foul}}</th>
                                    <td>Số lần phạm lỗi</td>
                                    <th>{{newsearchResult.team2.foul}}</th>
                                </tr>
                                <tr>
                                    <th scope='row'>{{newsearchResult.team1.corner}}</th>
                                    <td>Số lần phạt góc</td>
                                    <th>{{newsearchResult.team2.corner}}</th>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>

        <script
            src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
        ></script>
        <script
            src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js'
        ></script>
        <script
            src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js'
        ></script>
    </body>
</html>