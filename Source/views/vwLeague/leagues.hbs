<div class='mt-3'></div>
<div class='container'>
    <div class='row'>
        <div class='col-sm-3'>
        </div>
        <div class='col-sm-6'>
            <div class='card'>

                <img
                    class='img-fluid'
                    src='https://wallpaperaccess.com/full/1348797.jpg'
                    alt=''
                />

            </div>
        </div>
        <div class='col-sm-2 ms-sm-3 bg-white border border-dark'>
            <h6 class='text-center mt-2'>Create league</h6>
            <form method = 'POST' action = ''"">
            <input
                type='text'
                class='form-control mt-2'
                name='name'
                id='CL_Input1'
                placeholder='Name of Leagues'
            />
            <input
                type='text'
                class='form-control mt-2'
                name='avatar'
                id='CL_Input1'
                placeholder='Avatar'
            />
            <input
                type='text'
                class='form-control mt-2'
                name='location'
                id='CL_Input2'
                placeholder='Select Location'
            />
            <input
                type='text'
                class='form-control mt-2'
                name='date'
                id='CL_Input3'
                placeholder='Select Date'
            />
            <input
                type='text'
                class='form-control mt-2'
                name="NoC"
                id='CL_Input4'
                placeholder='Number of Clubs'
            />
            {{#ifStr lcAuthUser.role 3 }}
            <button class='btn btn-success my-3' type='submit'>Create Now</button>
            {{else}}
            <br>
            <div class="alert alert-warning" role="alert">
                Bạn không phải là admin nên không thể dùng chức năng này
            </div>
            {{/ifStr}}
            {{#if noti}}
                        <div
                            class='alert alert-success alert-dismissible fade show'
                            role='alert'
                        >
                            <button
                                type='button'
                                class='close'
                                data-dismiss='alert'
                                aria-label='Close'
                            >
                                <span aria-hidden='true'>&times;</span>
                            </button>
                            {{noti}}
                        </div>
                    {{/if}}
            </form>
        </div>
    </div>
   
    <div class='row mt-5'>
        <div class='col-sm-3'>
        </div>
        <div class='col-sm-6'>
            <h4>Leagues</h4>
        </div>
    </div>

    <div class='row mt-5'>
        <div class='col-sm-3'></div>
        <div class='col-sm-6'>
            <table class='table'>
                <tbody>
                    {{#if this.Leagues}}
                    {{#each this.Leagues as |L|}}
                     <tr>
                        <td><img src="../../{{L.avatar}}" alt="" style='width: 40px'>{{L.name}}</td>
                        <td class='text-muted'><ion-icon
                                name='time-outline'
                            ></ion-icon>
                            {{L.date}}</td>
                        <td class='text-muted'><ion-icon
                                name='location-outline'
                            ></ion-icon>
                            {{L.location}}</td>
                        <td class='text-muted'><a href='#'>
                                View details
                                <ion-icon
                                    name='arrow-forward-outline'
                                    color='primary'
                                ></ion-icon>
                            </a></td>
                    </tr>
                    {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>